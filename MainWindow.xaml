<Window x:Class="TEAMS2HA.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="302" Width="774">

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Configuration:" FontWeight="Bold" />

        <StackPanel Grid.Row="1" Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock Text="Microsoft Teams Local API Key:" Width="200" VerticalAlignment="Center"/>
            <TextBox x:Name="TeamsApiKeyBox" Width="300" Margin="10,0,0,0" IsReadOnly="True"/>
            <Button Content="Test Teams Connection" Margin="10,0,0,0" Click="TestTeamsConnection_Click" Width="214" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock Text="Homeassistant Long Lived Token:" Width="200" VerticalAlignment="Center"/>
            <TextBox x:Name="HomeassistantTokenBox" Width="300" Margin="10,0,0,0"/>
            <Button Content="Test Homeassistant Connection" Margin="10,0,0,0" Click="TestHomeassistantConnection_Click" />
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock Text="Homeassistant URL:" Width="200" VerticalAlignment="Center"/>
            <TextBox x:Name="HomeassistantURLBox" Width="300" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10,0,0" Orientation="Horizontal">
            <CheckBox x:Name="RunAtWindowsBootCheckBox" Content="Run at Windows Boot" Margin="0,0,10,0"/>
            <CheckBox x:Name="RunMinimisedCheckBox" Content="Run Minimised"/>
            <Button Content="Save Settings" Margin="10,0,0,0" Click="SaveSettings_Click" />
        </StackPanel>

        <TextBlock Grid.Row="5" FontWeight="Bold" Margin="0,10,0,0" Text="Connection Status:" />

        <StackPanel Grid.Row="6" Margin="0,10,0,0" Orientation="Horizontal">
            <TextBlock x:Name="TeamsConnectionStatus" Text="Teams: Disconnected" Margin="0,0,10,0"/>
            <TextBlock x:Name="HomeassistantConnectionStatus" Text="Homeassistant: Disconnected"/>
        </StackPanel>

    </Grid>
</Window>